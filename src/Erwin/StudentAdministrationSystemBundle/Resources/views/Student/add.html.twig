{% extends 'ErwinStudentAdministrationSystemBundle:Student:student.html.twig' %}

{% block addForm %}
    <div class="div-add">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_errors(form) }}

                <div>
                    {{ form_label(form.firstName, "First Name:") }}
                    {{ form_errors(form.firstName) }}
                    {{ form_widget(form.firstName) }}
                </div>
                <div>
                    {{ form_label(form.middleName, "Middle Name:") }}
                    {{ form_errors(form.middleName) }}
                    {{ form_widget(form.middleName) }}
                </div>
                <div>
                    {{ form_label(form.lastName, "Last Name:") }}
                    {{ form_errors(form.lastName) }}
                    {{ form_widget(form.lastName) }}
                </div>
                <div style="text-align: center; margin-top: 5px;">
                    {{ form_widget(form.save, { "attr": {"style": "font-weight: bold; color: blue;" }, "label" : "Add Student Record"}) }}
                </div>
        {{ form_end(form) }}
    </div>    
{% endblock %}
{% block processMessage %}
    {% if message == "" %}
        <p></p>    
    {% else %}
        <p style="margin-left:150px; margin-top: 20px; font-weight:bold; color:maroon;">{{ message }}</p>        
    {% endif %}
{% endblock %}    
