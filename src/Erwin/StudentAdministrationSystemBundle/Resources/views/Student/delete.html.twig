{% extends 'ErwinStudentAdministrationSystemBundle:Student:student.html.twig' %}
{% block javaScript %}    
{% endblock %}
{% block deleteForm %}
    <div class="div-delete">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate' }}) }}
            {{ form_errors(form) }}
                <div>
                    {{ form_label(form.studentId, "Pupil ID:") }}
                    {{ form_errors(form.studentId) }}
                    {{ form_widget(form.studentId,  { "attr": {"value": student.studentId }, "disabled" : "true" }) }}
                </div>       
                <div>
                    {{ form_label(form.firstName, "First Name:") }}
                    {{ form_errors(form.firstName) }}
                    {{ form_widget(form.firstName, { "attr": {"value": student.firstName }, "disabled" : "true" }) }}
                    </div>
                <div>
                    {{ form_label(form.middleName, "Middle Name:") }}
                    {{ form_errors(form.middleName) }}
                    {{ form_widget(form.middleName, { "attr": {"value": student.middleName }, "disabled" : "true" }) }}
                </div>
                <div>
                    {{ form_label(form.lastName, "Last Name:") }}
                    {{ form_errors(form.lastName) }}
                    {{ form_widget(form.lastName, { "attr": {"value": student.lastName }, "disabled" : "true" }) }}
                </div>
                <div style="margin-top:5px; float: left;">
                    {{ form_widget(form.cancel, { "attr": {"style": "font-weight: bold; color: blue;"}, "label" : "Cancel Delete"}) }}
                </div>
                <div style="margin-top:5px;">    
                    {{ form_widget(form.delete, { "attr": {"style": "font-weight: bold; color: blue;"}, "label" : "Delete Record"}) }}
                </div>       
        {{ form_end(form) }}
    </div>            
{% endblock %}
{% block processMessage %}
    {% if message == "" %}
        <p></p>    
    {% else %}
        <p style="margin-left:150px; margin-top: 20px; font-weight:bold; color:maroon;">{{ message }}</p>
    {% endif %}
{% endblock %}    
