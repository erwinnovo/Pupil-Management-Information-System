{% extends 'ErwinStudentAdministrationSystemBundle:Subject:subject.html.twig' %}
{% block javaScript %}    
{% endblock %}
{% block deleteForm %}
    <div class="div-delete">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate' }}) }}
            {{ form_errors(form) }}
                <div>
                    {{ form_label(form.subjectId, "Subject ID:") }}
                    {{ form_errors(form.subjectId) }}
                    {{ form_widget(form.subjectId,  { "attr": {"value": subject.subjectId }, "disabled" : "true" }) }}
                </div>       
                <div>
                    {{ form_label(form.subjectName, "Subject Name:") }}
                    {{ form_errors(form.subjectName) }}
                    {{ form_widget(form.subjectName, { "attr": {"value": subject.subjectName }, "disabled" : "true" }) }}
                </div>
                <div style="margin-top:5px; float: left;">
                    {{ form_widget(form.cancel, { "attr": {"style": "font-weight: bold; color: blue;"}, "label" : "Cancel Delete"}) }}
                </div>
                <div style="margin-top:5px;">    
                    {{ form_widget(form.delete, { "attr": {"style": "font-weight: bold; color: blue;"}, "label" : "Delete Record"}) }}
                </div>       
        {{ form_end(form) }}
    </div>            
{% endblock %}
{% block processMessage %}
    {% if message == "" %}
        <p></p>    
    {% else %}
        <p style="margin-left:150px; margin-top: 20px; font-weight:bold; color:maroon;">{{ message }}</p>
    {% endif %}
{% endblock %}    
