{% extends 'ErwinStudentAdministrationSystemBundle:QuizType:quizType.html.twig' %}
{% block updateForm %}
    <div class="div-update">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_errors(form) }}
                <div>
                    {{ form_label(form.quizTypeId, "Quiz Type ID:") }}
                    {{ form_errors(form.quizTypeId) }}
                    {{ form_widget(form.quizTypeId,  { "attr": {"value": quizType.quizTypeId }, "disabled" : "true" }) }}
                </div>       
                <div>
                    {{ form_label(form.quizTypeName, "Quiz Type:") }}
                    {{ form_errors(form.quizTypeName) }}
                    {{ form_widget(form.quizTypeName, { "attr": {"value": quizType.quizTypeName }}) }}
                </div>
                <div style="margin-top:5px; float: left;">
                    {{ form_widget(form.cancel, {attr: {"style": "font-weight: bold; color: blue;"}, "label": "Cancel Update" }) }}
                </div>
                <div style="margin-top:5px;">    
                    {{ form_widget(form.update, { "attr": {"style": "font-weight: bold; color: blue;"}, "label": "Update Record" }) }}
                </div>       
        {{ form_end(form) }}
    </div>            
{% endblock %}
{% block processMessage %}
    {% if message == "" %}
        <p></p>    
    {% else %}
        <p style="margin-left:150px; margin-top: 20px; font-weight:bold; color:maroon;">{{ message }}</p>       
    {% endif %}
{% endblock %}    
